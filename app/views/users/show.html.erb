
<%= render "books/list", user: @user %>


<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
<h1>Books</h1>
<table class="table">
  <tbody>
    <% @books.each do |book| %>
  <tr>
	  <th>Title</th>
	  <th><%= book.title %></th>
  </tr>
  <tr>
	  <th>Opinion</th>
	  <th><%= book.body %></th>
  </tr>
  <% end %>
  </tbody>

</table>