<% render 'books/list', user: @user %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tbody class="table">
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>

  </tbody>
</table>
 <div class="row">
    <%=link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <%end%>
  </div>
<h1>New book</h1>

  <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  <div class="row">
  <div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <th>

    </th>
    <th>
      image
    </th>
    <th>
      name
    </th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
      <td>
        <%= user.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>