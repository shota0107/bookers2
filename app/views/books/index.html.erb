<% render 'books/list', user: @user %>

<div class="container">
  <div class="row">
<table class="table table-striped">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<span>
    <%=link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cogss"></i>
    <%end%>
</span>

 <h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Creat Book' %>
  <% end %>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
    <%=link_to book.title, book_path(book.id) %>
  </span>




<% end %>

<h1>Users</h1>

<% @books.each do |book| %>
<%= image_tag @user.get_profile_image(100,100) %>


  <p>name</p>
  <span><%= book.title %></span>

<% end %>
</table>
</div>
</div>